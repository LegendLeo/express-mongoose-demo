extends ../layout

block content
  .container
    .row
      each item in movies
        .col-md-3
          .img-thumbnail.item-img
            a(href='/movie/' + item.id)
              img(src=item.poster alt=item.title)
            .caption
              h3 #{item.title}
              p
                a(href='/movie/' + item.id role="button" target="_blank") 观看预告片